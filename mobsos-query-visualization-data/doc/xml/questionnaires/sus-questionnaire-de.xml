<?xml version="1.0" encoding="utf-8" ?>
<!-- A simple questionnaire for measuring Usability and Learnability. The SUS Questionnaire is based on: Brooke, J. (1996) "SUS: A quick and dirty usability scale". In: Usability Evaluation in Industry. The two different factors of usability and learnability stem from a study by Lewis, J. R. & Sauro, J. (2009) "The Factor Structure of the System Usability Scale". The german version as modelled in this document is a result of a crowdsourcing initiative by Wolfgang Reinhardt, consolidated by the usability specialists Eva Ruegenhagen and Bernard Rummel from SAP. -->
<qu:Questionnaire xmlns="http://dbis.rwth-aachen.de/mobsos/questionnaire.xsd" xmlns:qu="http://dbis.rwth-aachen.de/mobsos/questionnaire.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	
	<qu:Page name="Instructions" 
		 xsi:type="qu:InformationPageType">
		<qu:Instructions>
			Hallo, ${USER.NAME}! Bitte fülle folgenden Fragebogen zur System-Gebrauchstauglichkeit von ${SURVEY.RESOURCE} aus. Das Ausfüllen wird ca. 5 Minuten dauern.
		</qu:Instructions>
	</qu:Page>
	
	<qu:Page name="Gebrauchstauglichkeit" 
	      qid="SUS.1"
	      minval="1" 
	      maxval="5"
	      minlabel="stimme überhaupt nicht zu" 
	      maxlabel="stimme vollkommen zu" 
		  required="false"
	      xsi:type="qu:OrdinalScaleQuestionPageType">
		<qu:Instructions>
			Ich denke, dass ich ${SURVEY.RESOURCE} gerne häufig benutzen würde.
		</qu:Instructions>
	</qu:Page>
	
	<qu:Page name="Gebrauchstauglichkeit" 
	      qid="SUS.2"
	      minval="1" 
	      maxval="5"
	      minlabel="stimme überhaupt nicht zu"
	      maxlabel="stimme vollkommen zu" 
		  required="false"
	      xsi:type="qu:OrdinalScaleQuestionPageType">
		<qu:Instructions>
			Ich fand ${SURVEY.RESOURCE} unnötig komplex.
		</qu:Instructions>
	</qu:Page>
	
	<qu:Page name="Gebrauchstauglichkeit" 
	      qid="SUS.3"
	      minval="1" 
	      maxval="5"
	      minlabel="stimme überhaupt nicht zu" 
	      maxlabel="stimme vollkommen zu" 
		  required="false"
	      xsi:type="qu:OrdinalScaleQuestionPageType">
		<qu:Instructions>
			Ich fand ${SURVEY.RESOURCE} einfach zu benutzen.
		</qu:Instructions>
	</qu:Page>
	
	<qu:Page name="Erlernbarkeit" 
	      qid="SUS.4"
	      minval="1" 
	      maxval="5"
	      minlabel="stimme überhaupt nicht zu" 
	      maxlabel="stimme vollkommen zu" 
		  required="false"
	      xsi:type="qu:OrdinalScaleQuestionPageType">
		<qu:Instructions>
			Ich glaube, ich würde die Hilfe einer technisch versierten Person benötigen, um ${SURVEY.RESOURCE} benutzen zu können.
		</qu:Instructions>
	</qu:Page>
	
	<qu:Page name="Gebrauchstauglichkeit" 
	      qid="SUS.5"
	      minval="1" 
	      maxval="5"
	      minlabel="stimme überhaupt nicht zu" 
	      maxlabel="stimme vollkommen zu" 
		  required="false"
	      xsi:type="qu:OrdinalScaleQuestionPageType">
		<qu:Instructions>
			Ich fand, die verschiedenen Funktionen in ${SURVEY.RESOURCE} waren gut integriert.
		</qu:Instructions>
	</qu:Page>
	
	<qu:Page name="Gebrauchstauglichkeit" 
	      qid="SUS.6"
	      minval="1" 
	      maxval="5"
	      minlabel="stimme überhaupt nicht zu" 
	      maxlabel="stimme vollkommen zu" 
		  required="false"
	      xsi:type="qu:OrdinalScaleQuestionPageType">
		<qu:Instructions>
			Ich denke, ${SURVEY.RESOURCE} enthielt zu viele Inkonsistenzen.
		</qu:Instructions>
	</qu:Page>
	
	<qu:Page name="Gebrauchstauglichkeit" 
	      qid="SUS.7"
	      minval="1" 
	      maxval="5"
	      minlabel="stimme überhaupt nicht zu" 
	      maxlabel="stimme vollkommen zu" 
		  required="false"
	      xsi:type="qu:OrdinalScaleQuestionPageType">
		<qu:Instructions>
			Ich kann mir vorstellen, dass die meisten Menschen den Umgang mit ${SURVEY.RESOURCE} sehr schnell lernen.
		</qu:Instructions>
	</qu:Page>
	
	<qu:Page name="Gebrauchstauglichkeit" 
	      qid="SUS.8"
	      minval="1" 
	      maxval="5"
	      minlabel="stimme überhaupt nicht zu" 
	      maxlabel="stimme vollkommen zu" 
		  required="false"
	      xsi:type="qu:OrdinalScaleQuestionPageType">
		<qu:Instructions>
			Ich fand ${SURVEY.RESOURCE} sehr umständlich zu nutzen.
		</qu:Instructions>
	</qu:Page>
	
	<qu:Page name="Gebrauchstauglichkeit" 
	      qid="SUS.9"
	      minval="1" 
	      maxval="5"
	      minlabel="stimme überhaupt nicht zu" 
	      maxlabel="stimme vollkommen zu" 
		  required="false"
	      xsi:type="qu:OrdinalScaleQuestionPageType">
		<qu:Instructions>
			Ich fühlte mich bei der Benutzung von ${SURVEY.RESOURCE} sehr sicher.
		</qu:Instructions>
	</qu:Page>
	
	<qu:Page name="Erlernbarkeit" 
	      qid="SUS.10"
	      minval="1" 
	      maxval="5"
	      minlabel="stimme überhaupt nicht zu" 
	      maxlabel="stimme vollkommen zu" 
		  required="false"
	      xsi:type="qu:OrdinalScaleQuestionPageType">
		<qu:Instructions>
			Ich musste eine Menge lernen, bevor ich anfangen konnte ${SURVEY.RESOURCE} zu verwenden.
		</qu:Instructions>
	</qu:Page>
	
	<qu:Page name="Gesamterfolg" 
	      qid="SUS.OS"
	      minval="1" 
	      maxval="7"
	      minlabel="stimme überhaupt nicht zu" 
	      maxlabel="stimme vollkommen zu"  
		  required="true"
	      xsi:type="qu:OrdinalScaleQuestionPageType">
		<qu:Instructions>
			Insgesamt denke ich, ${SURVEY.RESOURCE} ist ein voller Erfolg.
		</qu:Instructions>
	</qu:Page>
	
	<qu:Page name="Negative Aspects" 
	      qid="SUS.N"
		  required="false"
	      xsi:type="qu:FreeTextQuestionPageType">
		<qu:Instructions>
			Liste die negativsten Aspekte von ${SURVEY.RESOURCE} auf.
		</qu:Instructions>
	</qu:Page>
	
	<qu:Page name="Positive Aspects" 
	      qid="SUS.P"
		  required="false"
	      xsi:type="qu:FreeTextQuestionPageType">
		<qu:Instructions>
			Liste die positivsten Aspekte von ${SURVEY.RESOURCE} auf.
		</qu:Instructions>
	</qu:Page>
	
</qu:Questionnaire>